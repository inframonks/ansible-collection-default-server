{{ ansible_managed | comment}}

[commands]
apply_updates              = {{ dnf_automatic_apply_updates }}
download_updates           = {{ dnf_automatic_download_updates }}
upgrade_type               = {{ dnf_automatic_upgrade_type }}
random_sleep               = {{ dnf_automatic_random_sleep }}
reboot                     = {{ dnf_automatic_reboot }}
reboot_command             = /usr/bin/systemctl reboot
system_package_cache       = {{ dnf_automatic_system_package_cache }}
system_name                = {{ ansible_host }}

[emitters]
emit_via                   = {{ dnf_automatic_emit_via }}

[email]
email_from                 = {{ dnf_automatic_email_from }}
email_to                   = {{ dnf_automatic_email_to }}
email_host                 = {{ dnf_automatic_email_host }}
email_tls                  = {{ dnf_automatic_email_tls }}
email_port                 = {{ dnf_automatic_email_port }}
email_auth                 = {{ dnf_automatic_email_auth | default('login') }}
{% if dnf_automatic_email_user is defined %}
email_user                 = {{ dnf_automatic_email_user }}
{% endif %}
{% if dnf_automatic_email_password is defined %}
email_password             = {{ dnf_automatic_email_password }}
{% endif %}
